/activites-375e:
  get:
    description: Retrieve list of activites base on either time or location or both
      responses:
        200:
          body:
            application/json:
              example:
                [
                  {
                    "id": 543,
                    "nom": "Vélo Paradiso au Plateau-Mont-Royal",
                    "description": "Un vélo projecteur sillonnera les 19 arrondissements de Montréal pour diffuser, sur grand écran, les meilleurs courts-métrages réalisés par des réalisateurs autochtones dans le cadre du Wapikoni mobile, ainsi que des vidéoclips issus de collaborations entre musiciens autochtones et de nos communautés culturelles. Avec : La Bronze et Esther Pennell, Random Recipe et Natasha Kanapé Fontaine, SoCalled et Shauit, Sunny Duval et Laura Niquay, ainsi que Dramatik et Matthew Vachon. Soyez de la partie pour célébrer en musique et en images toute la richesse de notre diversité !",
                    "arrondissement": "Le Plateau-Mont-Royal",
                    "lieu":
                      {
                        "id": 633,
                        "activitesID": 9999,
                        "nom": "Here",
                        "lat": -45.123,
                        "lng": 73.123
                      },
                    "dates":
                      [
                        {
                          "id": 634,
                          "activitesID": 9999,
                          "dates": "2012-12-12",
                          "day": 12,
                          "month": 12,
                          "year": 2012
                        }
                      ]
                  }
                ]
    queryParameters:
      au:
        displayName: Au date
        type: string
        description: End of time
        example: 2020-12-12
        required: false
      du:
        displayName: Du date
        type: string
        description: Start of time
        example: 2000-12-12
        required: false
      lat:
        displayName: Latitude
        type: double
        description: Latitude is the "Y" geographic coordinate
        example: 75.123
        required: false
      lng:
        displayName: Longitude
        type: double
        description: Longitude is the "X" geographic coordinate
        example: -45.123
        required: false
      rayon:
        displayName: Rayon
        type: double
        description: Radius of a circle or sphere is any of the line segments from its center to its perimeter in meter
        example: 5000
        required: false
