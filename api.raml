/stations-bixi:
  get:
    description: Retrieve list of Bixi Station within radius of location with certain minimun amount of bixi
      responses:
        200:
          body:
            application/json:
              example:
                [
                  {
                      "id": 3,
                      "s": "Clark/Evans",
                      "n": 6003,
                      "st": 1,
                      "b": false,
                      "su": false,
                      "m": false,
                      "lu": 1500678720000,
                      "lc": 1500678980000,
                      "bk": false,
                      "bl": false,
                      "la": 45.5111313,
                      "lo": -73.5679092,
                      "da": 4,
                      "dx": 0,
                      "ba": 15,
                      "bx": 0
                  }
                ]
    queryParameters:
      min_bixi_dispo:
        displayName: Available Bixi
